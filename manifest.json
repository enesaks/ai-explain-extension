{
    "manifest_version": 3,
    "name": "AI Explain",
    "version": "1.0",
    "description": "Select text and get AI explanation",
    "permissions": [
        "scripting",
        "activeTab",
        "contextMenus"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_title": "AI Explain"
    }
}